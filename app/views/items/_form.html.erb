<h1>New To-Do Item</h1>

<%= form_for [user, user.items.new], remote: true do |f| %>
  <div class='form-group'>
    <%= f.label :Item, "Add a New Item!" %>
    <%= f.text_area :name, class: "form-control", placeholder: "Enter item." %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
